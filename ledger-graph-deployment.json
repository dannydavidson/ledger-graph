{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "ledger-graph-deployment"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "name": "ledger-graph",
        "labels": {
          "app": "ledger-graph"
        }
      },
      "spec": {
        "containers": [
          {
            "resources": {
              "limits": {
                "cpu": 0.5
              }
            },
            "image": "gcr.io/ledger-graph/ledger-graph",
            "name": "ledger-graph",
            "env": [
              {
                "name": "DB_USER",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "db-credentials",
                    "key": "user"
                  }
                }
              },
              {
                "name": "DB_PASS",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "db-credentials",
                    "key": "password"
                  }
                }
              }
            ],
            "ports": [
              {
                "containerPort": 11235,
                "name": "ledger-graph"
              }
            ]
          }
        ]
      }
    }
  }
}
