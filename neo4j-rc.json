{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "neo4j"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "neo4j"
    },
    "template": {
      "metadata": {
        "name": "neo4j",
        "labels": {
          "app": "neo4j"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "neo4j",
            "name": "neo4j",
            "ports": [
              {
                "containerPort": 7474,
                "name": "neo4j"
              }
            ],
            "volumeMounts": [
              {
                "name": "neo4j",
                "mountPath": "/data"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "neo4j",
            "gcePersistentDisk": {
              "pdName": "neo4j",
              "fsType": "ext4"
            }
          }
        ]
      }
    }
  }
}
