#!/usr/bin/env bash

# symlink gcloud so its available on sudo path with circleci
if [ -f /opt/google-cloud-sdk/bin/gcloud ]; then
  ln -s /opt/google-cloud-sdk/bin/gcloud /usr/local/bin/gcloud
fi

gcloud config set compute/zone us-central1-a
gcloud config set project $GCLOUD_PROJECT

gcloud --quiet components install kubectl
gcloud --quiet components update

# symlink kubectl so its available on sudo path with circleci
if [ -f /opt/google-cloud-sdk/bin/kubectl ]; then
  ln -s /opt/google-cloud-sdk/bin/kubectl /usr/local/bin/kubectl
fi
